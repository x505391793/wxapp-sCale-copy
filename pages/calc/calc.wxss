/* pages/calc/calc.wxss */
.output{
  background-color: white;
  /* margin-bottom: 30rrpx; */
  text-align: right;
  /* 内边距 */
  padding: 10rpx;
  height: 30%;
  font-weight: bold;
  font-family: 微软雅黑;
  font-size: 50rpx;
  border: 2rpx solid black;
  display: flex;
  justify-content: center;
  /* 设置块 */
  box-sizing: border-box;
  flex-direction: column;
  justify-content: center;
}
.input{
  background-color: cornflowerblue;
  height: 70%;
}
.btn{
  border: 1rrpx solid black;
  border-radius: 10%;
  margin-bottom: 1%;
  margin-top: 1%;
  margin-left: 1%;
  margin-right: 1%;
  background-color: white;
  width: 25%;
  color: black;
  /* height: 64rpx; */
  
  /* 文字居中 */
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.btn:active{
  background-color:#c7c7c7;
}

.groupbtn{
  display: flex;
  height: 20%;
}
.calc{
  height: 100vh;
}
